<Window x:Class="ApactaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApactaWPF"
        xmlns:wpfTool="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="395.092" Width="749.744">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="364" VerticalAlignment="Top" Width="742">
            <TabItem Header="Show All">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="RefreshBtn" Content="Get Bookings" HorizontalAlignment="Left" Margin="10,22,0,0" VerticalAlignment="Top" Width="75" Click="Get_All_Bookings"/>
                    <Label x:Name="label" Content="Details/edit:" HorizontalAlignment="Left" Margin="510,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.579,0.524"/>
                    <Label x:Name="renterlbl" Content="Renter" HorizontalAlignment="Left" Margin="405,121,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="tolbl" Content="To" HorizontalAlignment="Left" Margin="405,210,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="ownerlbl" Content="Owner" HorizontalAlignment="Left" Margin="405,254,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="fromlbl" Content="From" HorizontalAlignment="Left" Margin="405,165,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="materiallbl" Content="Material" HorizontalAlignment="Left" Margin="405,75,0,0" VerticalAlignment="Top"/>
                    <ListView x:Name="showAllView" HorizontalAlignment="Left" Height="277" Margin="10,47,0,0" VerticalAlignment="Top" Width="366" PreviewMouseLeftButtonUp="listView_Click" SelectionChanged="showAllView_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Renter" DisplayMemberBinding="{Binding User.UserName}"/>
                                <GridViewColumn Header="Material" DisplayMemberBinding="{Binding Item.Name}"/>
                                <GridViewColumn Header="Deleted" DisplayMemberBinding="{Binding Deleted}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBox x:Name="materialtxt" HorizontalAlignment="Left" Height="23" Margin="484,78,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="rentertxt" HorizontalAlignment="Left" Height="23" Margin="484,121,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="fromtxt" HorizontalAlignment="Left" Height="23" Margin="484,165,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="totxt" HorizontalAlignment="Left" Height="23" Margin="484,210,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="ownertxt" HorizontalAlignment="Left" Height="23" Margin="484,254,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <Button x:Name="button" Content="Delete" HorizontalAlignment="Left" Margin="529,298,0,0" VerticalAlignment="Top" Width="75" Click="btn_delete"/>
                    <Button x:Name="SUBMITBTN" Content="submit changes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="635,298,0,0" Click="SUBMITBTN_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Create New">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="button1" Content="create" HorizontalAlignment="Left" Margin="338,242,0,0" VerticalAlignment="Top" Width="75" Click="Create"/>
                    <Label x:Name="renterlbl_Copy" Content="Renter" HorizontalAlignment="Left" Margin="256,72,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="tolbl_Copy" Content="To" HorizontalAlignment="Left" Margin="256,161,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="fromlbl_Copy" Content="From" HorizontalAlignment="Left" Margin="256,116,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="materiallbl_Copy" Content="Material" HorizontalAlignment="Left" Margin="256,26,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="materialtxt_create" HorizontalAlignment="Left" Height="23" Margin="335,29,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <TextBox x:Name="rentertxt_create" HorizontalAlignment="Left" Height="23" Margin="335,72,0,0" TextWrapping="Wrap" Text="Choose Something.." VerticalAlignment="Top" Width="120" IsEnabled="False"/>
                    <ListView x:Name="listView_Users" HorizontalAlignment="Left" Height="283" Margin="10,26,0,0" VerticalAlignment="Top" Width="230" PreviewMouseLeftButtonUp="listViewUsers_Click">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}"/>
                                <GridViewColumn Header="Firstname" DisplayMemberBinding="{Binding FirstName}"/>
                                <GridViewColumn Header="Lastname" DisplayMemberBinding="{Binding LastName}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <ListView x:Name="listView_Materials" HorizontalAlignment="Left" Height="283" Margin="465,26,0,0" VerticalAlignment="Top" Width="259" PreviewMouseLeftButtonUp="listViewMaterial_Click">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <wpfTool:DateTimePicker Name="todatetime" Margin="338,167,279,147" TimeFormat="FullDateTime" Kind="Local" />
                    <Button x:Name="GetAllUsers" Content="Refresh Users" HorizontalAlignment="Left" Margin="79,6,0,0" VerticalAlignment="Top" Width="85" Click="GetAllUsers_Click"/>
                    <Button x:Name="GetAllMaterials" Content="Refresh Materials" HorizontalAlignment="Left" Margin="553,6,0,0" VerticalAlignment="Top" Width="101" Click="GetAllMaterials_Click"/>
                    <wpfTool:DateTimePicker x:Name="fromdatetime" Margin="338,122,279,192" TimeFormat="FullDateTime" Kind="Local" />
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
