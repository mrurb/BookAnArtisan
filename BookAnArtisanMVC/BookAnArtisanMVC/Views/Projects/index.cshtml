@model BookAnArtisanMVC.Models.IndexViewModel<BookAnArtisanMVC.ServiceReference.Project>
@{ var projectList = Model.Pager.PageList; }

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Create New", "Create")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kontakt")
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].Contact.UserName )
        </th>
        <th>
            @Html.DisplayName("Oprettet af")
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].Modified)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].ProjectDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].ProjectStatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].StreetName)
        </th>
        <th></th>
    </tr>

@foreach (var item in projectList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modified)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectStatusId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.Partial("_Pagination")