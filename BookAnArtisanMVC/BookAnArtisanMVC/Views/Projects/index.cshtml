@model BookAnArtisanMVC.Models.IndexViewModel<BookAnArtisanMVC.ServiceReference.Project>
@{ var projectList = Model.Pager.PageList; }

@{
    ViewBag.Title = "Index";
}

<h2>Alle projekter</h2>

<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Opret ny", "Create")
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => projectList[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].ProjectDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].StreetName)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => projectList[0].ProjectStatusId)
        </th>
    </tr>

@foreach (var item in projectList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contact.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StreetName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProjectStatusId)
        </td>
        <td>
            @Html.ActionLink("Redigér", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.Partial("_Pagination")