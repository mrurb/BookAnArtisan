@model BookAnArtisanMVC.ServiceReference.Booking

@{
    ViewBag.Title = "Delete";
}

<h2>Slet</h2>

<h3>Er du sikker på at du vil slette denne udlejning?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Item.Name) udlejning for @Html.DisplayFor(model => model.User.UserName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Item)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Item.Owner)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Item.Owner.UserName)
            <br /><br />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EndTime)
            <br /><br />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Tilbage til listen", "Index")
        </div>
    }
</div>
