@using Microsoft.Ajax.Utilities
@model BookAnArtisanMVC.Models.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Alle bookings</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pager.PageList[0].Item.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Pager.PageList[0].StartTime)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Pager.PageList[0].EndTime)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Pager.PageList[0].User.UserName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Pager.PageList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.User.UserName)
        </td>


        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
