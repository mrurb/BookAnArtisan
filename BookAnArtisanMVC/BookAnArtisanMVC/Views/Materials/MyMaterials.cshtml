@model BookAnArtisanMVC.Models.IndexViewModel<BookAnArtisanMVC.ServiceReference.Material>

@{
    ViewBag.Title = "MyMaterials";
    var modelList = Model.Pager.PageList;
}

<h2>Mine materialer</h2>

<p>
    @Html.ActionLink("Opret ny", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => modelList[0].Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => modelList[0].Condition)
        </th>
        <th>
            @Html.DisplayNameFor(model => modelList[0].Deleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => modelList[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => modelList[0].Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in modelList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Condition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deleted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Redigér", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.Partial("_Pagination")